{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts", "./*.ts", "bin/**/*.ts"],
  "exclude": ["src/**/*.spec.ts", "node_modules"]
}
